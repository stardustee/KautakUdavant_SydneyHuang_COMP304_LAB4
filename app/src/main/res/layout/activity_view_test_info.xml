<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.ViewTestInfoActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Test Registeration"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#00BFA5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BPL:"
            android:textColor="#00BFA5" />

        <EditText
            android:id="@+id/et_BPL"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BPM:"
            android:textColor="#00BFA5" />

        <EditText
            android:id="@+id/et_BPM"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Temperature:"
            android:textColor="#00BFA5" />

        <EditText
            android:id="@+id/et_Temprature"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auscutation:"
            android:textColor="#00BFA5"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_Auscutation"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Body Auscutation"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Body Inpections:"
            android:textColor="#00BFA5"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_BInspection"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="@string/body_inspection"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btn_Test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFB2B2"
            android:onClick="addNewTest"
            android:text="@string/add_test" />
    </LinearLayout>


</LinearLayout>